{
  "name": "serialdevices",
  "displayName": "SerialDevices",
  "description": "Scan for Serial Devices",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/*.ino",
    "onCommand:serialdevices.getsomedevices",
    "onView:SerialDeviceProviderService"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "serialdevices.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "serialdevices.getsomedevices",
        "title": "Refresh Devices"
      },
      {
        "command": "serialdevices.refreshEntry",
        "title": "Scan for changes.",
        "icon": {
          "light": "./resources/refresh.svg",
          "dark": "./resources/refresh.svg"
        }
      },
      {
        "command": "serialdevices.arduino_sp",
        "title": "Show Arduino Serial Selection",
        "icon": {
          "light": "./resources/ino_16X.svg",
          "dark": "./resources/ino_16X.svg"
        }
      },
      {
        "command": "serialdevices.unrename",
        "title": "UnEdit",
        "icon": {
          "light": "./resources/delete.svg",
          "dark": "./resources/delete_drk.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "serialdevices.refreshEntry",
          "when": "view == SerialDeviceProviderService",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "serialdevices.arduino_sp",
          "when": "view == SerialDeviceProviderService",
          "group": "inline"
        },
        {
          "command": "serialdevices.unrename",
          "when": "view == SerialDeviceProviderService",
          "group": "inline"
        }
      ]
    },
    "views": {
      "serials": [
        {
          "id": "SerialDeviceProviderService",
          "name": "Serial Devices"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.66.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.1",
    "typescript": "^4.5.5",
    "@vscode/test-electron": "^2.1.2"
  },
  "dependencies": {
    "serialport": "^10.4.0"
  }
}
